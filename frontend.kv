<CameraScreen>:
    GridLayout:
        cols: 1
        padding:10
        spacing:10

        Camera:
            id: camera
            resolution: (640, 480)
            play: False

        Button:
            id: camera_button
            text: 'Start camera'
            on_press: root.start() if root.ids.camera.play == False else root.stop()
        Button:
            id: capture_button
            text:'Capture'
            on_press: root.capture()

<ImageScreen>:
    GridLayout:
        cols: 1
        Image:
            id: img
        Button:
            text: 'Create Sharable link'
            on_press: root.create_link()
        Label:
            id: link
            text:''

        GridLayout:
            cols: 2

            Button:

                text: 'Copy link'
                on_press: root.copy_link()
            Button:
                text: 'Open link'
                on_press: root.open_link()

<RootWidget>
    CameraScreen:
        id: camera_screen
        name: 'camera_screen'

    ImageScreen:
        id: image_screen
        name: 'image_screen'